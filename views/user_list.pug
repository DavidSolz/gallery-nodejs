extends layout

block content
  h1.text-center.mt-4.mb-4= title

  if user_list.length
    .d-flex.flex-wrap.justify-content-center
      each user in user_list
        .card(style='width: 220px; margin: 10px; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); text-align: center; padding: 15px;')
          h4= user.username
          .text-muted=user.name
          .text-muted=user.surname

          form(method='POST', action=`/users/user_delete/${user._id}`)
            button.btn.btn-sm.btn-danger(type='submit', onclick='return confirm("Are you sure you want to delete this user?")') Delete
  else
    p.text-center.mt-4.text-muted There are no users.
  if messages && messages.length
    .alert.alert-danger
      ul
        each msg in messages
          li= msg
