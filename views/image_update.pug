extends layout

block content
  h1.text-center.mb-4= title

  form(method='POST')
    .form-group
      label(for='name') Name:
      input#name.form-control(
        type='text',
        name='name',
        placeholder='min. 2 litery',
        required,
        value=(image ? image.name : '')
      )

      label(for='description') Description:
      input#description.form-control(
        type='text',
        name='description',
        value=(image ? image.description : '')
      )

      label(for='gallery') Select gallery:
      select#gallery.form-control(name='gallery' required)
        option(value='') --Select a gallery--
        each gallery in galleries
          if image && image.gallery._id.toString() === gallery._id.toString()
            option(value=gallery._id selected)= gallery.name
          else
            option(value=gallery._id)= gallery.name

    button.btn.btn-primary(type='submit') Submit

  if messages && messages.length
    .alert.alert-danger
      ul
        each msg in messages
          li= msg
