extends layout

block content
  h1.text-center.mb-4= title
  if image_list.length
    .d-flex.flex-wrap.justify-content-center
      each image in image_list
        .card(style='width: 300px; margin: 15px; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); text-align: center; padding: 15px;')
          if image.path
            img(src=image.path, alt=image.name, style='max-width: 100%; max-height: 150px; margin-bottom: 10px; object-fit: contain; border-radius: 4px;')
          h4.mb-2= image.name
          p.mb-1
            strong Description:
            | #{image.description || 'No description'}
          p.mb-3
            strong Gallery:
            if image.gallery
              | #{image.gallery.name}

          .actions(style='margin-top: auto; display: flex; flex-direction: column; gap: 6px;')
            form(method='POST', action=`/images/image_delete/${image._id}`)
              button.btn.btn-sm.btn-danger(type='submit', style="width:100%", onclick='return confirm("Are you sure you want to delete this image?")') Delete
  else
    p There are no any images.
  if messages && messages.length
    .alert.alert-danger
      ul
        each msg in messages
          li= msg
