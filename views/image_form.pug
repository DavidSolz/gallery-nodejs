extends layout
block content
    h1.text-center.mb-4= title

    form(method='POST')
        div.form-group
            label(for='name') Image Name:
            input#name.form-control(type='text', placeholder='min. 2 litery' name='name' required value=(undefined===image ? '' : image.name) )
            label(for='description') Description:
            input#description.form-control(type='text', placeholder='min. 2 litery' name='description' required value=(undefined===image ? '' : image.description))
            label(for='path') Select file:
            input#path.form-control(type='file', placeholder='min. 3 litery' name='path' required value="")
            label(for='gallery') Select gallery:
            select#gallery.form-control(name='gallery' required)
                option(value='') --Select a gallery--
                for gallery in galleries
                    if image && gallery._id.toString()===image.gallery
                        option(value=gallery._id selected) #{gallery.name}
                    else
                        option(value=gallery._id) #{gallery.name}
        button.btn.btn-primary(type='submit') Submit
    if messages && messages.length
        .alert.alert-danger
            ul
                each msg in messages
                    li= msg
